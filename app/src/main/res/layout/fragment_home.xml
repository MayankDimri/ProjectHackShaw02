<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    // Row 1 D
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="10dp"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:paddingStart="15dp"
                android:paddingEnd="8dp"
                tools:layout_editor_absoluteX="128dp"
                tools:layout_editor_absoluteY="371dp"
                android:src="@drawable/eventhacktober" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:src="@drawable/eventcrack"
                tools:layout_editor_absoluteX="128dp"
                tools:layout_editor_absoluteY="371dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                tools:layout_editor_absoluteX="128dp"
                tools:layout_editor_absoluteY="371dp"
                android:src="@drawable/eventandroid" />

        </LinearLayout>
    </HorizontalScrollView>
    // Row 2 To Do
    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To Do..."
        android:textSize="20sp"
        android:textColor="@color/prinary_blue_dark"
        android:background="#D2F1C041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:text="SAVE"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />
    // Row 3
    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:background="#D2F1C041"
        android:text="1."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />


    // Row 4
    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:background="#396A6A6A"
        android:layout_height="wrap_content"
        android:text="Services"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine" />
    // Row 5 s1 D
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="#396A6A6A"
        app:layout_constraintTop_toBottomOf="@+id/textView19">

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="251dp"
            android:src="@drawable/book" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="251dp"
            android:src="@drawable/timetable" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="251dp"
            android:src="@drawable/book" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="251dp"
            android:src="@drawable/attendence" />


    </LinearLayout>
    // Row 6
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#396A6A6A"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Books"
            android:gravity="center"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="437dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Time Table"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="437dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Scolarship"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="437dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Attendence"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="437dp" />


    </LinearLayout>
    // Row 7 S2 D
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="#396A6A6A"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="251dp"
            android:src="@drawable/placement" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="251dp"
            android:src="@drawable/exam" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="251dp"
            android:src="@drawable/notes" />

        <ImageButton
            android:id="@+id/imageButton8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="251dp"
            android:src="@drawable/assiment" />

    </LinearLayout>
    // Row 8
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#396A6A6A"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Placement"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="437dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Exams"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="437dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Notes"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="437dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Assiment"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="437dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>